<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/textProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="20dp"/>
    <ImageView
        android:layout_weight="1.5"
        android:id="@+id/imgProductImage"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/textProductAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Product Description"
        android:textSize="16sp"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/textProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: $0.00"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/buttonBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProductPrice"
        android:text="Buy Now"
        android:textSize="18sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ All product information provided on ClicknBuy, including descriptions, images, and specifications, is for informational purposes only."
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Prices, promotions, and availability of products are subject to change without prior notice. ClicknBuy reserves the right to modify prices or discontinue products at any time."
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Product images on ClicknBuy are for illustration purposes only and may not always accurately represent the actual product."
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Customers are responsible for ensuring that products purchased from ClicknBuy are suitable for their intended use. "
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</LinearLayout>
